kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: rb-{{ backup.sa_name }}
  namespace: {{ backup.sa_namespace }}

subjects:
    
  - kind: ServiceAccount
    name: {{ backup.sa_name }}
    namespace: {{ backup.sa_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: 'system:openshift:scc:privileged'